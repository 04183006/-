<!--components/w-swiper/swiper.wxml-->
<swiper class="swiper"
        circular="true"
        autoplay="true"
        interval="3000"
        indicator-dots="true"
        indicator-color="white"
        indicator-active-color="#FF8247"
        duration="300">
        
  <block wx:for="{{list}}" wx:key="index">
    <swiper-item class="swiper-item">
      <image src="{{item.chartImg}}" mode="widthFix"></image>
    </swiper-item>
  </block>
</swiper>
