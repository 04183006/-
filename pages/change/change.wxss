page{
  height: 100%;
  box-sizing: border-box;
  overflow-y:hidden; 
}

.topstyle {
  width: 100%;
  height: 100rpx;
  background: #fc7766;
  display: flex;
  justify-content: center;
}

.son {
  width: 100%;
  height: 100%;
  background: white;
  border-radius: 100px 100px 0px 0px;
  /* border-bottom: 1px solid rgb(219, 211, 211); */
}

.big_box{
  width: 100%;
  height: 100vh;
  /* border: 2px solid red; */
  box-sizing: border-box;
  z-index: -999;
    background-image: url('http://image.xuptdata.com/userimg/change1.png');
  background-size: 100% 100%;
  /* margin-top: -100rpx; */
}

.big_box image{
  width: 100%;
  height: 100%;
  /* border: 2px solid red; */
}

.change{
  position: absolute;
  bottom: 30rpx;
  left: 0;
  right: 0;
  background: #FC7766;
  color: white;
  letter-spacing: 5rpx;
}
