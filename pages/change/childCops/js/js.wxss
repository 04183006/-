  overflow-y: hidden;
}

.topstyle {
  width: 100%;
  height: 100rpx;
  background: #fc7766;
  display: flex;
  justify-content: center;
}

.son {
  width: 100%;
  height: 100%;
  background: white;
  border-radius: 100px 100px 0px 0px;
  /* border-bottom: 1px solid rgb(219, 211, 211); */
}

.big_box{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  z-index: -1;
