/* pages/profile/childCops/gy/gy.wxss */

page {
  height: 100%;
  background-color: rgb(243, 237, 237);
  overflow-y: hidden;
}

.text {
  width: 80%;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  height: 80%;
  margin: auto;
  background: white;
  border-radius: 30rpx;
  box-shadow: 2px 2px 4px rgb(199, 195, 195);
  /* background-color: rgb(230, 228, 164); */
  background-image: linear-gradient(to bottom right,rgb(222, 239, 245), rgb(226, 216, 216));
  padding: 30rpx;
}

.person{
  width: 100%;
  height: 10%;
  border-bottom: 2px solid rgb(216, 212, 212);
  margin-bottom: 30rpx;
}

.msg{
  width: 100%;
  height: 80%;
  /* border: 2px solid red; */
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

textarea{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  width: 90%;
  height: 75%;
  margin: auto;
  padding: 20rpx;
  /* border: 2px solid red; */
  background-color: white;
  border-radius: 15rpx;  
}

span{
  color: rgb(165, 155, 155);
  font-size: 35rpx;
}

.submit{
  margin-top: 30rpx;
}

.shoucang{
  width: 60%;
  height: 150rpx;
  line-height: 150rpx;
  background: black;
  opacity: 0.8;
  text-align: center;
  color: white;
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  top: 0;
  margin: auto;
  border-radius: 4px;
}
