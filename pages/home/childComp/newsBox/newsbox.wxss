.newsbox{
  width: 90%;
  margin: 0 auto;
  height: 200rpx;
  border-bottom:1px solid rgb(236, 233, 233); 
  padding: 5px;
  display: flex;
  /* border: 2px solid red; */
  /* text-align: center; */
}

.left{
  flex: 6;
  height: 200rpx;
  /* background: green; */
  padding: 20rpx;
  box-sizing: border-box;
  text-align: left;
}

.left span{
  display: block;
  font-size: 30rpx;
}

.left label{
  /* display: block; */
  font-size: 27rpx;
  color: rgb(117, 115, 117);
  font-weight:100;
}

.right{
  flex:4;
  height: 200rpx;
  /* background: red; */
}

.right .img{
  width: 86%;
  margin-left: 7%;
  height: 160rpx;
  margin-top:25rpx; 
    border-radius: 20rpx;
  overflow: hidden;
}

.right .img image{
  width: 100%;
  height: 100%;
}



